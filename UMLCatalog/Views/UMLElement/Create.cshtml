@model UMLElement

@{
    ViewData["Title"] = "Создание страницы";
}

<form asp-action="create" asp-controller="UMLElement" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название элемента:</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание элемента:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label">Диаграмма:</label>
        <input asp-for="File" class="form-control" accept="image/*" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Code" class="control-label">Код:</label>
        <textarea asp-for="Code" class="form-control" style="font-family: 'Courier New';"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Tags" class="control-label">Тэги для поиска:</label>
        <textarea asp-for="Tags" class="form-control" style="font-family: 'Courier New';"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DiagramOrElement" class="control-label">Что будет на странице?</label><br />
        <input asp-for="DiagramOrElement" type="radio" value="Element" checked />
        <span>Элемент</span> <br />
        <input asp-for="DiagramOrElement" type="radio" value="Diagram" />
        <span>Диаграмма</span> <br />
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>