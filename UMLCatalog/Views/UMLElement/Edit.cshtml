@model UMLElement

    <form asp-action="Edit" asp-controller="UMLElement" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title" class="control-label">Название элемента:</label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание элмента:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="File" class="control-label">Диаграмма:</label>
            <input asp-for="File" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Code" class="control-label">Программный код диаграммы:</label>
            <textarea asp-for="Code" class="form-control" style="font-family: 'Courier New';"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>