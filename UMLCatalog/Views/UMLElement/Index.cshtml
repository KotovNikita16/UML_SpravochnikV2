@model UMLElement

@{
    ViewData["Title"] = Model.Title;
}

<div class="display-4">@Model.Title</div>
@if (User.Identity.IsAuthenticated)
{
    <div><a asp-controller="UMLElement" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> | <a asp-controller="UMLElement" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a></div>
}
<h3>Описание:</h3>
<p style="font-size: 24px; margin-top: 5px;">@Html.Raw(Model.Description)</p>
<h3>Диаграмма:</h3>
<p style="text-align: center;">
    <img class="img-fluid" src="data:@Model.ImgType;base64,@(Convert.ToBase64String(Model.Picture))" />
</p>
@if (Model.Code != null)
{
    <h3>Код:</h3>
    <p style="font-family: 'Courier New'; margin-top: 15px; margin-left: 40px; font-size: 15px;">
        <pre>@Model.Code</pre>
    </p>
}